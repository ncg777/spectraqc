{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spectraqc.example/schema/corpus_manifest_v1.schema.json",
  "title": "SpectraQC Corpus Manifest V1",
  "type": "object",
  "required": ["schema_version", "files"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["1.0"] },
    "root_dir": { "type": "string" },
    "exclusions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "hash_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "duration_s": { "type": "number", "minimum": 0 },
          "exclude": { "type": "boolean" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
